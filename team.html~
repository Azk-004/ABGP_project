                whatsapp: "https://wa.me/229XXXXXXXXX",
                instagram: "https://instagram.com/abgp",
                linkedin: "https://linkedin.com/in/abgp"
            }
        ];

        // Récupération des éléments du DOM
        const managerShowcase = document.getElementById('managerShowcase');
        const managerName = document.getElementById('managerName');
        const managerTitle = document.getElementById('managerTitle');
        const departmentInfo = document.getElementById('departmentInfo');
        const managerPhoto = document.querySelector('.manager-photo');
        const selectionGallery = document.getElementById('selectionGallery');
        const contactBtn = document.querySelector('.contact-btn');
        const socialIcons = document.querySelector('.social-icons');

        let activeManagerIndex = 0;

        // Création de la galerie de sélection
        function createSelectionGallery() {
            managers.forEach((manager, index) => {
                const thumbnail = document.createElement('div');
                thumbnail.className = 'thumbnail';
                thumbnail.dataset.index = index;

                const img = document.createElement('img');
                img.src = manager.photo;
                img.alt = manager.name;

                const name = document.createElement('div');
                name.className = 'thumbnail-name';
                name.textContent = manager.name.split(' ')[0];

                thumbnail.appendChild(img);
                thumbnail.appendChild(name);
                selectionGallery.appendChild(thumbnail);

                // Active le premier manager par défaut
                if (index === 0) {
                    thumbnail.classList.add('active');
                }

                // Ajout de l'événement de clic
                thumbnail.addEventListener('click', () => {
                    setActiveManager(index);
                });
            });
        }

        // Définir le manager actif
        function setActiveManager(index) {
            // Désactiver l'ancien manager actif
            const currentActive = document.querySelector('.thumbnail.active');
            if (currentActive) {
                currentActive.classList.remove('active');
            }

            // Activer le nouveau manager
            const newActive = document.querySelector(`.thumbnail[data-index="${index}"]`);
            newActive.classList.add('active');

            // Mettre à jour l'affichage principal
            updateManagerDisplay(index);

            // Mettre à jour l'index actif
            activeManagerIndex = index;
        }

        // Mettre à jour l'affichage du manager
        function updateManagerDisplay(index) {
            const manager = managers[index];

            // Animation de sortie
            managerShowcase.style.opacity = 0;

            setTimeout(() => {
                // Mise à jour des informations
                managerPhoto.src = manager.photo;
                managerName.textContent = manager.name;
                managerTitle.textContent = manager.title;
                departmentInfo.textContent = manager.description;

                // Mettre à jour le lien email
                const emailBtn = document.querySelector('.contact-btn');
                emailBtn.href = `mailto:${manager.email}`;

                // Mettre à jour les liens sociaux
                updateSocialLinks(manager);

                // Animation d'entrée
                managerShowcase.style.opacity = 1;
                managerShowcase.classList.add('fade-in');

                setTimeout(() => {
                    managerShowcase.classList.remove('fade-in');
                }, 600);
            }, 300);
        }

        // Mettre à jour les liens sociaux
        function updateSocialLinks(manager) {
            const socialIcons = document.querySelector('.social-icons');
            socialIcons.innerHTML = `
                <a href="mailto:${manager.email}" class="social-icon" title="Email">
                    <i class="fas fa-envelope"></i>
                </a>
                <a href="${manager.whatsapp}" class="social-icon" title="WhatsApp">
                    <i class="fab fa-whatsapp"></i>
                </a>
                <a href="${manager.instagram}" class="social-icon" title="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="${manager.linkedin}" class="social-icon" title="LinkedIn">
                    <i class="fab fa-linkedin"></i>
                </a>
            `;
        }

        // Initialisation
        createSelectionGallery();

        // Gestion du header au scroll
        const header = document.querySelector('header');

        window.addEventListener('scroll', () => {
            if (window.scrollY >= 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });
    </script>
